<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.example.hakeemalkhateb.musicapp.Payment">

    <TextView
        android:id="@+id/paymentt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="PAYMENT"
        android:textAlignment="center"
        android:textColor="#F06e63"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <TextView
        android:id="@+id/paymentDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Display songs to buy and will use any payment method to process the buying. \nA MasketWallet would appear when the user selects a song to buy, then he must chose the way of paying (e.x Master Card) and fill some other information. FulWallet will be used at the end to get the full information to finish buying the song. "
        android:textColor="#FFF"

        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentt" />

    <ImageButton
        android:id="@+id/songs"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"

        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/songslogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/albums" />


    <ImageButton
        android:id="@+id/albums"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"

        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/albumslogo"
        app:layout_constraintBottom_toBottomOf="@+id/songs"
        app:layout_constraintLeft_toRightOf="@+id/songs"
        app:layout_constraintRight_toLeftOf="@id/playlist" />

    <ImageButton
        android:id="@+id/playlist"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"

        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/nowplayinglogo"
        app:layout_constraintBottom_toBottomOf="@+id/albums"

        app:layout_constraintLeft_toRightOf="@+id/albums"
        app:layout_constraintRight_toLeftOf="@id/payment" />

    <ImageButton
        android:id="@+id/payment"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"

        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/paymentlogo"
        app:layout_constraintBottom_toBottomOf="@+id/songs"
        app:layout_constraintLeft_toRightOf="@+id/playlist"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
