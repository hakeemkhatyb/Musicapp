<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/playingnow"
    tools:context="com.example.hakeemalkhateb.musicapp.Playlist">

    <ImageButton
        android:id="@+id/songs"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginBottom="100dp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/songslogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/playingNowDescr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Display song that is being played"
        android:textColor="#FFF"

        android:textSize="20sp"

        />


    <ImageButton
        android:id="@+id/albums"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/albumslogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/playlist"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/nowplayinglogo"
        app:layout_constraintTop_toBottomOf="@id/albums" />

    <ImageButton
        android:id="@+id/payment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/paymentlogo"
        app:layout_constraintTop_toBottomOf="@id/playlist" />


</android.support.constraint.ConstraintLayout>