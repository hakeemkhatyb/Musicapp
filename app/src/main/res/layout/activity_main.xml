<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.example.hakeemalkhateb.musicapp.MainActivity">

    <TextView
        android:id="@+id/SongsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SONGS"
        android:textAlignment="center"
        android:textColor="#F06e63"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/songsDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Display songs list and sort it on last added"
        android:textColor="#FFF"

        android:textSize="15sp"

        app:layout_constraintTop_toBottomOf="@+id/SongsTitle" />

    <ImageView
        android:id="@+id/playing1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/playing"
        app:layout_constraintTop_toBottomOf="@id/songsDesc" />

    <ImageView
        android:id="@+id/playing2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/pause"
        app:layout_constraintTop_toBottomOf="@id/playing1" />

    <ImageView
        android:id="@+id/playing3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/playing"
        app:layout_constraintTop_toBottomOf="@id/playing2" />

    <ImageView
        android:id="@+id/playing4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/playing"
        app:layout_constraintTop_toBottomOf="@id/playing3" />


    <ImageView
        android:id="@+id/playing5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/playing"
        app:layout_constraintTop_toBottomOf="@id/playing4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Lil Uzi Vert - Xo Tour Life "
        android:textColor="#FFF"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/playing1"
        app:layout_constraintLeft_toRightOf="@id/playing1"
        app:layout_constraintTop_toTopOf="@id/playing1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="The Weeknd - Starboy"
        android:textColor="#FFF"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/playing2"
        app:layout_constraintLeft_toRightOf="@id/playing1"
        app:layout_constraintTop_toTopOf="@id/playing2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Travis Scott - Goosebumps"
        android:textColor="#FFF"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/playing3"
        app:layout_constraintLeft_toRightOf="@id/playing1"
        app:layout_constraintTop_toTopOf="@id/playing3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Elias - Cloud"
        android:textColor="#FFF"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/playing4"
        app:layout_constraintLeft_toRightOf="@id/playing1"
        app:layout_constraintTop_toTopOf="@id/playing4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Sam Smith - Too Good\n At Goodbyes "
        android:textColor="#FFF"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/playing5"
        app:layout_constraintLeft_toRightOf="@id/playing1"
        app:layout_constraintTop_toTopOf="@id/playing5" />

    <ImageButton
        android:id="@+id/songs"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/songslogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/albums" />


    <ImageButton
        android:id="@+id/albums"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"

        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/albumslogo"
        app:layout_constraintBottom_toBottomOf="@+id/songs"
        app:layout_constraintLeft_toRightOf="@+id/songs"
        app:layout_constraintRight_toLeftOf="@id/playlist" />

    <ImageButton
        android:id="@+id/playlist"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/nowplayinglogo"
        app:layout_constraintBottom_toBottomOf="@+id/albums"

        app:layout_constraintLeft_toRightOf="@+id/albums"
        app:layout_constraintRight_toLeftOf="@id/payment" />

    <ImageButton
        android:id="@+id/payment"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"

        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/paymentlogo"
        app:layout_constraintBottom_toBottomOf="@+id/songs"
        app:layout_constraintLeft_toRightOf="@+id/playlist"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
